// Prisma schema generated from current Drizzle schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // La URL se sobrescribe en DB.ts para usar DIRECT_URL si está disponible
  url      = env("DATABASE_URL")
}




model Document {
  id        BigInt   @id @default(autoincrement()) @db.BigInt
  content   String?  @db.Text
  metadata  Json?
  embedding Unsupported("vector(768)")?
  
  @@index([metadata], type: Gin, map: "documents_metadata_idx")
  @@map("documents")
}

// prisma/schema.prisma

model Chat {
  id        String   @id @default(cuid())
  userId    String   // ID del usuario de Clerk
  orgId     String?  // ID de la organización (opcional)
  title     String?  // Título del chat (primer mensaje o generado)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  messages  ChatMessage[]
  
  @@index([userId])
  @@index([orgId])
}

model ChatMessage {
  id        String   @id @default(cuid())
  chatId    String
  role      String   // 'user' | 'assistant' | 'system'
  content   String   @db.Text
  parts     Json?    // Para almacenar los parts de UIMessage
  createdAt DateTime @default(now())
  
  chat      Chat     @relation(fields: [chatId], onDelete: Cascade)
  
  @@index([chatId])
}
